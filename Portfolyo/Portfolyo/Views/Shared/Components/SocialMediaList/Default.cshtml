@using Entities.Concrete
@model List<SocialMedia>

<div class="social-nav" data-aos="fade-up" data-aos-delay="200">
    <nav role="navigation">
        @if (Model.Count() < 1)
        {
            <p class="nav justify-content-left">Sosyal Medya Hesabı Bulunamadı</p>
        }
        else
        {
            <ul class="nav justify-content-left">
                @foreach (var item in Model)
                {
                    <li class="nav-item"><a class="nav-link" href="@item.Url" title="@item.Name"><i class="fab fa-@item.Icon"></i><span class="menu-title sr-only">@item.Name</span></a></li>
                }
            </ul>
        }
    </nav>
</div>