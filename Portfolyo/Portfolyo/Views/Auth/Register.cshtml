@using Entities.Dtos
@model UserForRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("/Areas/User/Views/Default/_HeadPartial.cshtml")

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Bir Hesabınız Yok Mu?</h4>
                            <h6 class="font-weight-light">Sadece Birkaç Adımda Sisteme Kaydınızı Yapabilirsiniz</h6>
                            <form id="RegisterForm" class="pt-3" asp-controller="Auth" asp-action="Register" method="post">
                                <div class="form-group">
                                    <input asp-for="Name" type="text" class="form-control form-control-lg" id="InputName" placeholder="Ad">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Surname" type="text" class="form-control form-control-lg" id="InputSurname" placeholder="Soyad">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Username" type="text" class="form-control form-control-lg" id="InputUserName" placeholder="Kullanıcı Adı">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ImageUrl" type="text" class="form-control form-control-lg" id="InputImageUrl" placeholder="Görsel URL">
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" type="text" class="form-control form-control-lg" id="InputEmail" placeholder="E-Posta">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmEmail" type="text" class="form-control form-control-lg" id="InputConfirmEmail" placeholder="E-Posta'yı Tekrar Giriniz">
                                    <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" id="InputPassword" placeholder="Şifre">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" id="InputConfirmPassword" placeholder="Şifreyi Tekrar Giriniz">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">
                                </div>
                                <div class="mt-3">
                                    <input type="submit" value="Kaydol" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("/Areas/User/Views/Default/_HeadPartial.cshtml")
</body>

</html>
