@using Entities.Dtos
@model UserForLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("/Areas/User/Views/Default/_HeadPartial.cshtml")

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Hoş Geldiniz!</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapın</h6>
                            <form id="LoginForm" class="pt-3" asp-controller="Auth" asp-action="Login" method="post">
                                <div class="form-group">
                                    <input asp-for="Email" type="text" class="form-control form-control-lg" id="InputLoginEmail" placeholder="E-Posta">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" id="InputLoginPassword" placeholder="Şifre">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">
                                </div>
                                <div class="mt-3">
                                    <input type="submit" value="Giriş Yap" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Henüz Bir Hesabınız Yok Mu? <a href="/auth/register" class="text-primary">Hesap Oluştur</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("/Areas/User/Views/Default/_HeadPartial.cshtml")
</body>

</html>

