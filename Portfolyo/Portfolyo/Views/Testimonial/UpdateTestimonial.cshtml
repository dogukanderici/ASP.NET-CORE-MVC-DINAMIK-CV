@model TestimonialListViewModel

@{
    ViewData["Title"] = "Referans Bilgilerini Güncelleme";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Referans Bilgilerini Güncelleme</h2>
            <form id="UpdateSkillForm" class="form-sample" asp-controller="Testimonial" asp-action="UpdateTestimonial" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(t => t.Testimonial.TestimonialId)
                <div class="form-group row">
                    <label asp-for="Testimonial.ClientName" class="col-sm-2 col-form-label">Ad-Soyad</label>
                    <div class="col-sm-10">
                        <input asp-for="Testimonial.ClientName" class="form-control" type="text" placeholder="Ad-Soyad" />
                    </div>
                    <span asp-validation-for="Testimonial.ClientName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Testimonial.Company" class="col-sm-2 col-form-label">Şirket</label>
                    <div class="col-sm-10">
                        <input asp-for="Testimonial.Company" type="text" class="form-control" placeholder="Şirket" />
                    </div>
                    <span asp-validation-for="Testimonial.Company" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Testimonial.Title" class="col-sm-2 col-form-label">Başlık</label>
                    <div class="col-sm-10">
                        <input asp-for="Testimonial.Title" type="text" class="form-control" placeholder="Başlık" />
                    </div>
                    <span asp-validation-for="Testimonial.Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Testimonial.Comment" class="col-sm-2 col-form-label">Yorum</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Testimonial.Comment" type="text" class="form-control" rows="6" placeholder="Yorum"></textarea>
                    </div>
                    <span asp-validation-for="Testimonial.Comment" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Referans Görseli</label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="@Model.TestimonialImage" />
                    </div>
                    <span asp-validation-for="@Model.TestimonialImage" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <span class="col-sm-2"></span>
                    <div class="col-sm-2">
                        <input type="submit" value="Güncelle" class="form-control btn btn-outline-success" />
                    </div>
                    <div class="col-sm-2">
                        <a href="/testimonial" class="form-control btn btn-outline-danger">İptal</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>