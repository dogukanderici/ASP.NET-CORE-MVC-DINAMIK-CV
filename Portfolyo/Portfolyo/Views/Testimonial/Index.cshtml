@using Entities.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Görsel</th>
                                <th>Ad-Soyad</th>
                                <th>Şirket</th>
                                <th>Unvan</th>
                                <th>Sil</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/userfile/@item.ImageUrl" alt="image" />
                                        <span class="pl-2">@item.ClientName</span>
                                    </td>
                                    <td>@item.ClientName</td>
                                    <td>@item.Company</td>
                                    <td>@item.Title</td>
                                    <td><a asp-controller="Testimonial" asp-action="DeleteTestimonial" asp-route-id="@item.TestimonialId" class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a></td>
                                    <td><a asp-controller="Testimonial" asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialId" class="btn btn-outline-primary"><i class=" mdi mdi-grease-pencil"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Testimonial/AddTestimonial" class="btn btn-success">Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
