@model TestimonialListViewModel

@{
    ViewData["Title"] = "Referans Ekleme";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Yeni Referans Ekleme</h2>
            <form id="AddNewExperienceForm" class="form-sample" asp-controller="Testimonial" asp-action="AddTestimonial" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <label asp-for="Testimonial.ClientName" class="col-sm-2 col-form-label">Referans Adı</label>
                    <div class="col-sm-10">
                        <input asp-for="Testimonial.ClientName" class="form-control" type="text" placeholder="Referans Adı" />
                    </div>
                    <span asp-validation-for="Testimonial.ClientName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Testimonial.Company" class="col-sm-2 col-form-label">Şirket</label>
                    <div class="col-sm-10">
                        <input asp-for="Testimonial.Company" class="form-control" type="text" placeholder="Şirket" />
                    </div>
                    <span asp-validation-for="Testimonial.Company" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Testimonial.Title" class="col-sm-2 col-form-label">Başlık</label>
                    <div class="col-sm-10">
                        <input asp-for="Testimonial.Title" class="form-control" type="text" placeholder="Başlık" />
                    </div>
                    <span asp-validation-for="Testimonial.Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Testimonial.Comment" class="col-sm-2 col-form-label">Yorum</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Testimonial.Comment" class="form-control" type="text" rows="8" placeholder="Yorum"></textarea>
                    </div>
                    <span asp-validation-for="Testimonial.ClientName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Referans Görseli</label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="@Model.TestimonialImage" />
                    </div>
                    <span asp-validation-for="@Model.TestimonialImage" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <span class="col-sm-2"></span>
                    <div class="col-sm-2">
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>