@using Entities.Concrete
@model ServiceListViewModel
@{
    ViewData["Title"] = "Hizmetlerim";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@if (Model.Services == null)
{
    <p>Verileriniz Yükleniyor...</p>
}
else
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="mb-0">Hizmetlerim</h2>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead>
                                <tr>
                                    <th>Hizmet Adı</th>
                                    <th>Hizmet Görselleri</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Services)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a class="btn btn-outline-danger" asp-controller="Service" asp-action="DeleteService" asp-route-id="@item.SercviceId"><i class="mdi mdi-delete"></i></a></td>
                                        <td><a class="btn btn-outline-primary" asp-controller="Service" asp-action="UpdateService" asp-route-id="@item.SercviceId"><i class=" mdi mdi-grease-pencil"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Service/AddNewService" class="btn btn-outline-success"><i class="mdi mdi-plus"></i> Yeni Hizmet Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}