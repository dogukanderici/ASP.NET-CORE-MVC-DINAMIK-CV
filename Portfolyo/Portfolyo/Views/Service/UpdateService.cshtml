@model ServiceViewModel
@{
    ViewData["Title"] = "Hizmet Güncelleme";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Hizmet Güncelleme</h2>
            <form id="UpdateServiceForm" asp-controller="Service" asp-action="UpdateService" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(p => p.Service.SercviceId)
                <div class="form-group row">
                    <label asp-for="Service.Title" class="col-sm-2 col-form-label">Başlık</label>
                    <div class="col-sm-10">
                        <input asp-for="Service.Title" type="text" class="form-control" placeholder="Başlık" />
                    </div>
                    <span asp-validation-for="Service.Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Hizmet Görseli</label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="@Model.ServicePicture" />
                    </div>
                    <span asp-validation-for="@Model.ServicePicture" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <span class="col-sm-2"></span>
                    <div class="col-sm-2">
                        <input type="submit" class="form-control btn btn-success" value="Güncelle" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>