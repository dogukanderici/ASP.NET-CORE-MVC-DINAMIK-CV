@using Entities.Concrete
@model Contact

@{
    ViewData["Title"] = "Kişisel İletişim Bilgilerim";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Kişisel İletişim Bilgilerim</h2>
            <form id="UpdateAboutPageForm" asp-controller="ContactSubplace" asp-action="Index" method="post">
                @Html.HiddenFor(c => c.ContactId)
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-2 col-form-label">Başlık</label>
                    <div class="col-sm-10">
                        <input asp-for="Title" type="text" class="form-control" placeholder="Başlık" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label">Açıklama</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" type="text" class="form-control" rows="6" placeholder="Açıklama"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Mail" class="col-sm-2 col-form-label">E-Posta</label>
                    <div class="col-sm-10">
                        <input asp-for="Mail" type="text" class="form-control" placeholder="E-Posta" />
                    </div>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-2 col-form-label">Telefon</label>
                    <div class="col-sm-10">
                        <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <span class="col-sm-2"></span>
                    <div class="col-sm-2">
                        <input type="submit" class="form-control btn btn-success" value="Güncelle" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

