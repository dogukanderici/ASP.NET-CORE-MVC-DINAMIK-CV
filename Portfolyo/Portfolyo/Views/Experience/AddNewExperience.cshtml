@model ExperienceListViewModel
@{
    ViewData["Title"] = "Yeni Deneyim";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Yeni Deneyim Ekleme</h2>
            <form id="AddNewExperienceForm" class="form-sample" asp-controller="Experience" asp-action="AddNewExperience" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <label asp-for="Experience.Name" class="col-sm-2 col-form-label">Deneyim Adı</label>
                    <div class="col-sm-10">
                        <input asp-for="Experience.Name" class="form-control" type="text" placeholder="Deneyim Adı" />
                    </div>
                    <span asp-validation-for="Experience.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Experience.Date" class="col-sm-2 col-form-label">Tarih</label>
                    <div class="col-sm-10">
                        <input asp-for="Experience.Date" class="form-control" type="text" placeholder="Tarih" />
                    </div>
                    <span asp-validation-for="Experience.Date" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Experience.Description" class="col-sm-2 col-form-label">Açıklama</label>
                    <div class="col-sm-10">
                        <input asp-for="Experience.Description" class="form-control" type="text" placeholder="Açıklama" />
                    </div>
                    <span asp-validation-for="Experience.Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Deneyim Görseli</label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="@Model.ExperienceImage" />
                    </div>
                </div>

                <div class="form-group row">
                    <span class="col-sm-2"></span>
                    <div class="col-sm-2">
                        <input type="submit" value="Kaydet" class="btn btn-outline-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>