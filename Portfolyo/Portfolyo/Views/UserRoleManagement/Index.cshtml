@using Entities.Concrete
@model List<WriterRole>

@{
    ViewData["Title"] = "Kulllanıcı Rol Listesi";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="mb-0">Kullanıcı Rol Listesi</h2>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Rol Adı</th>
                                <th>Aktif Mi?</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string status = "Aktif";
                                string badgeClass = "badge badge-success";

                                if (!item.IsActive)
                                {
                                    status = "Pasif";
                                    badgeClass = "badge badge-danger";
                                }
                                <tr>
                                    <th>@item.Id</th>
                                    <th>@item.Name</th>
                                    <th class="@badgeClass">@status</th>
                                    <td><a class="btn btn-outline-primary" asp-controller="UserRoleManagement" asp-action="UpdateRole" asp-route-id="@item.Id">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/UserRoleManagement/CreateUserRole" class="btn btn-outline-success">Yeni Rol Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>