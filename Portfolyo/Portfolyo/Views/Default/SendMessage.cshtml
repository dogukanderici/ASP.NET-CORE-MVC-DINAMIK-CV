<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form id="SendMessageForm" action="/Default/SendMessage/" method="POST">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">Adınız</label>
                <input class="form-control" type="text" id="name" name="SenderName" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Mail Adresiniz</label>
                <input class="form-control" type="email" id="email" name="Sender" required>
            </div>
            <div class="form-group my-2">
                <label for="subject" class="form-label fw-bolder">Mesaj Konunuz</label>
                <input class="form-control" style="resize: none;" id="subject" name="Subject" required />
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Mesajınız</label>
                <textarea class="form-control" style="resize: none;" id="message" name="MessageContent" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Gönder</button>
        </form>
    </div>
</div>
