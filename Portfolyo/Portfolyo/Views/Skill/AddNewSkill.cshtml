@using Entities.Concrete
@model Skill
@{
    ViewData["Title"] = "Yeni Yetenek";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Yeni Yetenek Ekleme</h2>
            <form id="AddNewSkillForm" class="form-sample" asp-controller="Skill" asp-action="AddNewSkill" method="post">
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-2 col-form-label">Yetenek Başlığı</label>
                    <div class="col-sm-10">
                        <input asp-for="Title" class="form-control" type="text" placeholder="Başlık" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Value" class="col-sm-2 col-form-label">Yetenek Değeri</label>
                    <div class="col-sm-10">
                        <input asp-for="Value" type="text" class="form-control" placeholder="Değer" />
                    </div>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="submit" value="Kaydet" class="form-control btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>