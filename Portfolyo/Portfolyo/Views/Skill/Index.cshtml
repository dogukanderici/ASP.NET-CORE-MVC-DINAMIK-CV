@model SkillListViewModel
@{
    ViewData["Title"] = "Yeteneklerim";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@if (Model.Skills == null)
{
    <p>Verileriniz Yükleniyor...</p>
}
else
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="mb-0">Yeteneklerim</h2>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad</th>
                                    <th>Değer</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody class="list">

                                @foreach (var item in Model.Skills)
                                {
                                    <tr>
                                        <th>@item.SkillId</th>
                                        <td>@item.Title</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="completion mr-2">@item.Value%</span>
                                                <div>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><a class="btn btn-outline-danger" asp-controller="Skill" asp-action="DeleteSkill" asp-route-id="@item.SkillId"><i class="mdi mdi-delete"></i></a></td>
                                        <td><a class="btn btn-outline-primary" asp-controller="Skill" asp-action="UpdateSkill" asp-route-id="@item.SkillId"><i class=" mdi mdi-grease-pencil"></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/skill/addnewskill" class="btn btn-primary">Yeni Yetenek Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}