@model AboutViewModel

@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Hakkımda Alanını Düzenle</h2>
            <form id="UpdateAboutPageForm" asp-controller="About" asp-action="Index" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(a => a.About.AboutId)
                <div class="form-group row">
                    <label asp-for="About.Title" class="col-sm-2 col-form-label">Başlık</label>
                    <div class="col-sm-10">
                        <input asp-for="About.Title" type="text" class="form-control" placeholder="Başlık" />
                    </div>
                    <span asp-validation-for="About.Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="About.Age" class="col-sm-2 col-form-label">Yaş</label>
                    <div class="col-sm-10">
                        <input asp-for="About.Age" type="text" class="form-control" placeholder="Yaş" />
                    </div>
                    <span asp-validation-for="About.Age" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="About.Mail" class="col-sm-2 col-form-label">E-Posta</label>
                    <div class="col-sm-10">
                        <input asp-for="About.Mail" type="text" class="form-control" placeholder="E-Posta" />
                    </div>
                    <span asp-validation-for="About.Mail" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="About.Phone" class="col-sm-2 col-form-label">Telefon</label>
                    <div class="col-sm-10">
                        <input asp-for="About.Phone" type="text" class="form-control" placeholder="Telefon" />
                    </div>
                    <span asp-validation-for="About.Phone" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="About.Address" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-10">
                        <input asp-for="About.Address" type="text" class="form-control" placeholder="Adres" />
                    </div>
                    <span asp-validation-for="About.Address" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Profil Fotoğrafı</label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="@Model.ProfilePicture" />
                    </div>
                    @* <span asp-validation-for="@Model.ProfilePicture" class="text-danger"></span> *@
                </div>
                <div class="form-group row">
                    <label asp-for="About.Description" class="col-sm-2 col-form-label">Açıklama</label>
                    <div class="col-sm-10">
                        <textarea asp-for="About.Description" type="text" class="form-control" rows="6" placeholder="Açıklama"></textarea>
                    </div>
                    <span asp-validation-for="About.Description" class="text-danger"></span>
                </div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="submit" class="form-control btn btn-success" value="Kaydet" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>