@using Entities.Concrete
@model WriterMessage

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Mesaj Gönder</h4>
                <form id="SendNewMessageForm" class="forms-sample" asp-area="User" asp-controller="Message" asp-action="SendMessage" method="post">

                    <div class="form-group row">
                        <label asp-for="ReceiverName" class="col-sm-2">Alıcı Adı</label>
                        <div class="col-sm-10">
                            <input asp-for="ReceiverName" type="text" class="form-control" id="InputReceiverName" placeholder="Alıcı Adı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Receiver" class="col-sm-2">Alıcı</label>
                        <div class="col-sm-10">
                            <input asp-for="Receiver" type="text" class="form-control" id="InputReceiver" placeholder="Alıcı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Subject" class="col-sm-2">Konu</label>
                        <div class="col-sm-10">
                            <input asp-for="Subject" type="text" class="form-control" id="InputSubject" placeholder="Konu">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MessageContent" class="col-sm-2">İçerik</label>
                        <div class="col-sm-10">
                            <textarea asp-for="MessageContent" type="text" class="form-control" id="Inputİçerik" placeholder="İçerik"></textarea>
                        </div>
                    </div>
                    <input type="submit" value="Gönder" class="btn btn-success">
                </form>
            </div>
        </div>
    </div>
</div>